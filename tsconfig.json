{
    "compilerOptions": {
      "esModuleInterop": true,
      "target": "ES5",
      "types": ["node"],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "CommonJS",
      "pretty": true,
      "sourceMap": true,
      "outDir": "./build",
      "allowJs": true,
      "noEmit": false
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "__tests__"
    ]
  }
  